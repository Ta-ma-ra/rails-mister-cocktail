<div class="container">

  <h2><%= @cocktail.name %></h2>

  <p>
    <strong>Ingredients:</strong>
  </p>

    <br>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description%> - <%= dose.ingredient.name %></li>
    <% end %>
  </ul>

  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-info'  %>
  <%= link_to "Back to Cocktails", cocktails_path, class: 'btn btn-info'  %>

</div>
